# Server port (default: 3001)
PORT=3001 
# Environment mode (development/production)
NODE_ENV="development" 
# Server URL for callbacks and redirects
SERVER_URL=http://localhost:${PORT}
# Client application URL
CLIENT_URL=http://localhost:3000
# CORS allowed origins
CORS_ORIGIN=${CORS_ORIGIN}

# Authentication & JWT

# Main JWT signing secret
JWT_SECRET="JWT_SECRET"
# Refresh token signing secret
JWT_SUPER_SECRET="JWT_SECRET"

# Google OAuth

# Google OAuth client ID
GOOGLE_CLIENT_ID="google-client-id.apps.googleusercontent.com"
# Google OAuth client secret
GOOGLE_CLIENT_SECRET="GOOGLE_client-secret"
# Google OAuth callback URL
GOOGLE_CALLBACK_URL="${CLIENT_URL}/auth/callback/google"

# Database

# MongoDB connection string (used by Prisma)
DATABASE_URL="mongodb+srv://mongo:password@mongo.{id}.mongodb.net/manus"

# Redis Cache

# Redis connection string (optional)
REDIS_URL=

# Email Configuration
# SMTP server host
MAIL_HOST="smtp.gmail.com"
# SMTP username
MAIL_USER="email@gmail.com"
# SMTP password
MAIL_PASSWORD="pass word mail smtp"
# Default sender email address
MAIL_FROM="Manus"

# OpenAI
OPENAI_URL=https://openrouter.ai/api/v1
OPENAI_KEY=sk-or-v1-hahahahaha
OPENAI_MODEL=google/gemini-2.0-flash-thinking-exp:free

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# External APIs
GOOGLE_API_KEY=your_google_api_key
YOUTUBE_API_KEY=your_youtube_api_key

# Security
HELMET_ENABLED=true

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

